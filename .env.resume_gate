# Resume Gate Configuration
# Add these to your .env file to customize Resume Gate behavior

# Disable Resume Gate validation (set to false to turn off)
CV_STRICT_CV_VALIDATION=true

# Minimum score required to pass (default: 60, range: 0-100)
# Lower = more permissive, Higher = more strict
CV_MIN_RESUME_SCORE=60

# Maximum characters to analyze (default: 5000)
CV_GATE_MAX_CHARS=5000

# To disable Resume Gate temporarily, set:
# CV_STRICT_CV_VALIDATION=false