  "smartCardFeatures": {
    "description": "SmartCard components support multiple view modes for rich content display",
    "supportedViewModes": {
      "text": "Default text-based card with title and description",
      "images": "Image gallery with lightbox",
      "code": "Syntax-highlighted code snippets",
      "github": "GitHub repository preview",
      "uri": "URL preview with iframe",
      "video": "Embedded video player",
      "tweet": "Embedded tweet",
      "multi-images": "Multiple images with quotes",
      "compare": "Before/after image comparison"
    },
    "editableFields": "All text fields are editable in edit mode",
    "settingsPanel": "Each SmartCard has 9 view modes accessible via settings button"
  },
  "notes": {
    "dataAdapter": "cv-data-adapter.tsx handles mapping from RESUME2WEBSITE extraction format to template format",
    "autoDetection": "Template automatically detects video URLs, GitHub repos, and tweets for optimal display",
    "testimonials": "Currently no CV extraction data maps to testimonials - always empty",
    "icons": "Icons are randomly assigned from contentIconMap during data adaptation"
  }
}