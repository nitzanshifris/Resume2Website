{
  "template": "v0_template_v1.5",
  "version": "1.5",
  "description": "Comprehensive mapping of all sections and data fields that v1.5 template can display",
  "sections": {
    "hero": {
      "sectionId": "hero",
      "displayLocation": "Hero section at top of page",
      "dataMapping": {
        "fullName": {
          "source": "hero.fullName",
          "type": "string",
          "required": true,
          "displayAs": "Main heading text"
        },
        "professionalTitle": {
          "source": "hero.professionalTitle",
          "type": "string",
          "required": true,
          "displayAs": "Subtitle under name"
        },
        "summaryTagline": {
          "source": "hero.summaryTagline",
          "type": "string",
          "required": true,
          "displayAs": "Tagline text below title"
        },
        "profilePhotoUrl": {
          "source": "hero.profilePhotoUrl",
          "type": "string | null",
          "required": false,
          "displayAs": "Profile photo in hero section"
        }
      }
    },
    "summary": {
      "sectionId": "summary",
      "displayLocation": "Full-width section with flip text animation",
      "dataMapping": {
        "sectionTitle": {
          "source": "summary.sectionTitle",
          "type": "string",
          "default": "Professional Summary",
          "displayAs": "Section heading"
        },
        "summaryText": {
          "source": "summary.summaryText",
          "type": "string",
          "required": true,
          "displayAs": "Animated flip text paragraph"
        }
      }
    },
    "experience": {
      "sectionId": "experience",
      "displayLocation": "Accordion layout section",
      "dataMapping": {
        "sectionTitle": {
          "source": "experience.sectionTitle",
          "type": "string",
          "default": "Professional Experience",
          "displayAs": "Section heading"
        },
        "experienceItems": {
          "source": "experience.experienceItems",
          "type": "array",
          "itemStructure": {
            "title": {
              "type": "string",
              "displayAs": "Job title in accordion header"
            },
            "company": {
              "type": "string",
              "displayAs": "Company name in accordion header"
            },
            "location": {
              "type": "string",
              "displayAs": "Location in accordion header"
            },
            "startDate": {
              "type": "string",
              "displayAs": "Start date in date range"
            },
            "endDate": {
              "type": "string",
              "displayAs": "End date in date range"
            },
            "description": {
              "type": "string",
              "displayAs": "Job description in accordion content"
            },
            "technologies": {
              "type": "array<string>",
              "optional": true,
              "displayAs": "Technology tags below description"
            },
            "achievements": {
              "type": "array<Achievement>",
              "optional": true,
              "displayAs": "Achievement cards in accordion",
              "itemStructure": {
                "id": "string",
                "title": "string",
                "description": "string",
                "icon": "'award' | 'users' | 'target' | 'trending-up'"
              }
            }
          }
        }
      }
    },
    "projects": {
      "sectionId": "projects",
      "displayLocation": "Carousel of SmartCards",
      "dataMapping": {
        "sectionTitle": {
          "source": "projects.sectionTitle",
          "type": "string",
          "default": "Projects",
          "displayAs": "Section heading"
        },
        "projectItems": {
          "source": "projects.projectItems",
          "type": "array",
          "itemStructure": {
            "title": {
              "type": "string",
              "displayAs": "Card title"
            },
            "description": {
              "type": "string",
              "displayAs": "Card description"
            },
            "link": {
              "type": "string",
              "displayAs": "Card link URL"
            },
            "icon": {
              "type": "keyof contentIconMap",
              "displayAs": "Card icon",
              "options": ["Lightbulb", "Palette", "SwatchBook", "Layers", "DraftingCompass", "Award", "Star", "ShieldCheck", "Heart", "Users", "Quote"]
            },
            "viewMode": {
              "type": "string",
              "optional": true,
              "options": ["text", "images", "code", "github", "uri", "video", "tweet", "multi-images", "compare"],
              "displayAs": "SmartCard view mode"
            },
            "textVariant": {
              "type": "string",
              "optional": true,
              "options": ["simple", "detailed"],
              "default": "detailed"
            },
            "videoUrl": {
              "type": "string",
              "optional": true,
              "displayAs": "Video embed when viewMode is 'video'"
            },
            "githubUrl": {
              "type": "string",
              "optional": true,
              "displayAs": "GitHub repo preview when viewMode is 'github'"
            },
            "images": {
              "type": "array<string>",
              "optional": true,
              "displayAs": "Image gallery when viewMode is 'images'"
            },
            "tweetId": {
              "type": "string",
              "optional": true,
              "displayAs": "Tweet embed when viewMode is 'tweet'"
            },
            "linkUrl": {
              "type": "string",
              "optional": true,
              "displayAs": "Preview URL when viewMode is 'uri'"
            },
            "technologies": {
              "type": "array<string>",
              "optional": true,
              "displayAs": "Technology tags on card"
            },
            "codeSnippet": {
              "type": "string",
              "optional": true,
              "displayAs": "Code snippet when viewMode is 'code'"
            },
            "codeLanguage": {
              "type": "string",
              "optional": true,
              "displayAs": "Code highlighting language"
            }
          }
        }
      }
    },
    "skills": {
      "sectionId": "skills",
      "displayLocation": "Custom skills section with categories",
      "dataMapping": {
        "sectionTitle": {
          "source": "skills.sectionTitle",
          "type": "string",
          "default": "Skills",
