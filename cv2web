#!/bin/bash
# CV2WEB Command Helper
# Usage: ./cv2web [command]

PROJECT_DIR="/Users/nitzan_shifris/Desktop/CV2WEB-V4"
cd "$PROJECT_DIR"

case "$1" in
    "extract"|"cv")
        echo "üîç Running CV extraction analysis..."
        ./.claude/commands/cv-extract.sh
        ;;
    "portfolio"|"gen")
        echo "üé® Running portfolio generation analysis..."
        ./.claude/commands/portfolio-generate.sh
        ;;
    "commit"|"push")
        echo "üõ°Ô∏è Running safe commit workflow..."
        ./.claude/commands/commit-and-push.sh
        ;;
    "prime"|"start")
        echo "üöÄ Loading CV2WEB project understanding..."
        ./.claude/commands/prime.sh
        ;;
    "review")
        echo "üëÄ Running code review..."
        ./.claude/commands/code-review.sh
        ;;
    "fix")
        echo "üîß Running error fix analysis..."
        ./.claude/commands/fix.sh
        ;;
    "help"|"")
        echo "CV2WEB Claude Commands:"
        echo "  ./cv2web extract   - Analyze CV extraction system"
        echo "  ./cv2web portfolio - Analyze portfolio generation"
        echo "  ./cv2web commit    - Safe commit with Git workflow"
        echo "  ./cv2web prime     - Load project understanding"
        echo "  ./cv2web review    - Run code review"
        echo "  ./cv2web fix       - Fix errors"
        ;;
    *)
        echo "‚ùå Unknown command: $1"
        echo "Run './cv2web help' for available commands"
        ;;
esac